{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "outDir": "./backend/dist",
    "sourceMap": true,
    "target": "ES6",
    "typeRoots": ["node_modules/@types"],
    "types": []
  },
  "exclude": ["node_modules"],
  "include": ["backend/src/**/*.ts"]
}
